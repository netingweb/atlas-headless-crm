# CRM Atlas Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control

# Database
MONGODB_URI=mongodb://localhost:27017/crm_atlas
MONGODB_DB_NAME=crm_atlas

# Redis
REDIS_URL=redis://localhost:6379

# Typesense (Full-text search)
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_API_KEY=xyz

# Qdrant (Vector search)
QDRANT_URL=http://localhost:6333

# Embeddings Provider (openai or jina)
# Required for semantic search functionality
EMBEDDINGS_PROVIDER=openai

# OpenAI Configuration (required if EMBEDDINGS_PROVIDER=openai)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=text-embedding-3-small

# Jina Configuration (required if EMBEDDINGS_PROVIDER=jina)
JINA_API_KEY=your-jina-api-key-here
JINA_MODEL=jina-embeddings-v2-base-en
JINA_BASE_URL=https://api.jina.ai/v1

# JWT Authentication
JWT_SECRET=change-me-in-production-use-a-strong-random-secret
JWT_TTL=24h

# Default Tenant Configuration
DEFAULT_TENANT=demo
DEFAULT_ADMIN_EMAIL=admin@demo.local
DEFAULT_ADMIN_PASSWORD=changeme

# API Server Configuration
API_PORT=3000
API_HOST=0.0.0.0
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
